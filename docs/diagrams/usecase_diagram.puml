@startuml UseCase_Sistem_Sarpras

' ========================================
' KONFIGURASI - PORTRAIT / TOP-DOWN
' ========================================
top to bottom direction
skinparam backgroundColor #fafafa
skinparam handwritten false
skinparam shadowing false

skinparam usecase {
    BackgroundColor #ffffff
    BorderColor #3b82f6
    BorderThickness 2
    FontName "Segoe UI"
    FontSize 11
}

skinparam actor {
    BackgroundColor #e0f2fe
    BorderColor #0284c7
    FontName "Segoe UI"
    FontSize 12
    FontStyle bold
}

skinparam rectangle {
    BackgroundColor #f8fafc
    BorderColor #64748b
    BorderThickness 2
    RoundCorner 20
}

' ========================================
' JUDUL
' ========================================
title <b>Use Case Diagram</b>\nSistem Peminjaman Sarpras

' ========================================
' AKTOR (Tanpa Admin)
' ========================================
actor "Mahasiswa" as mhs
actor "Sarpras" as sarpras
actor "Security" as security

' ========================================
' SISTEM
' ========================================
rectangle "Sistem Peminjaman Sarpras" {
    
    ' -- Autentikasi --
    usecase "Login" as UC1
    usecase "Register" as UC2
    
    ' -- Peminjaman --
    usecase "Ajukan Peminjaman" as UC3
    usecase "Lihat Status Peminjaman" as UC4
    usecase "Upload Surat Digital" as UC5
    
    ' -- Verifikasi --
    usecase "Verifikasi Peminjaman" as UC6
    usecase "Lihat Laporan Peminjaman" as UC7
    
    ' -- Kehadiran --
    usecase "Lihat Jadwal Aktif" as UC8
    usecase "Catat Kehadiran" as UC9
    
    ' -- Data Master --
    usecase "Kelola Ruangan" as UC10
    usecase "Kelola Barang" as UC11
    
    ' -- Notifikasi --
    usecase "Lihat Notifikasi" as UC12
}

' ========================================
' RELASI MAHASISWA
' ========================================
mhs --> UC1
mhs --> UC2
mhs --> UC3
mhs --> UC4
mhs --> UC5
mhs --> UC12

' ========================================
' RELASI SARPRAS
' ========================================
sarpras --> UC1
sarpras --> UC6
sarpras --> UC7
sarpras --> UC10
sarpras --> UC11

' ========================================
' RELASI SECURITY
' ========================================
security --> UC1
security --> UC8
security --> UC9

' ========================================
' EXTEND
' ========================================
UC3 ..> UC5 : <<extend>>

@enduml
