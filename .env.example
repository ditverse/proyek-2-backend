# Environment Configuration
APP_ENV=development
PORT=8000

# Database Configuration
# Get from: Supabase Dashboard → Settings → Database → Connection String (URI)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxx.supabase.co:5432/postgres

# JWT Configuration
# Change this in production to a strong random string
JWT_SECRET=your-secret-key-change-in-production

# Supabase Storage Configuration
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...  # service_role key, NOT anon key!
SUPABASE_BUCKET_NAME=surat-digital  # Bucket name from Storage section

# Storage Settings (optional - defaults shown)
STORAGE_SIGNED_URL_EXPIRES=600  # 10 minutes
MAX_UPLOAD_SIZE_MB=2

# CORS Configuration
CORS_ALLOWED_ORIGIN=*  # For production, use specific domain
